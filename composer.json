{
  "name": "clemencon/php-kata-template",
  "description": "Boilerplate for PHP katas.",
  "type": "project",
  "authors": [
    {
      "name": "Julien Clémençon",
      "email": "julien@clemencon.dev"
    }
  ],
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.1",
    "friendsofphp/php-cs-fixer": "^3.56",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "Clemencon\\Kata\\": "src/"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "check-cs": "vendor/bin/php-cs-fixer check --allow-risky=yes",
    "fix-cs": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
    "test": "vendor/bin/phpunit"
  },
  "minimum-stability": "stable"
}
